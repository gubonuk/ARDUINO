#include <Servo.h>

// ë²„íŠ¼ í•€ ì •ì˜ (ì„œë³´3, ì„œë³´4, ì„œë³´5 ì œì–´ìš©)
#define BUTTON_UP 2      // ì„œë³´3 (-) ë°©í–¥
#define BUTTON_RIGHT 3   // ì„œë³´4 (+) ë°©í–¥
#define BUTTON_DOWN 4    // ì„œë³´3 (+) ë°©í–¥
#define BUTTON_LEFT 5    // ì„œë³´4 (-) ë°©í–¥
#define BUTTON_E 6       // ì„œë³´5 (-) ë°©í–¥
#define BUTTON_F 7       // ì„œë³´5 (+) ë°©í–¥

// ì¡°ì´ìŠ¤í‹± í•€ ì •ì˜ (ì„œë³´1, ì„œë³´2 ì œì–´ìš©)
#define Joy_X A0  // Xì¶• (ì„œë³´1 ì œì–´)
#define Joy_Y A1  // Yì¶• (ì„œë³´2 ì œì–´)

// ì„œë³´ëª¨í„° í•€ ì •ì˜
#define SERVO_1 10  // ì¡°ì´ìŠ¤í‹± Xì¶• (ì¢Œìš° íšŒì „)
#define SERVO_2 11  // ì¡°ì´ìŠ¤í‹± Yì¶• (ì•ë’¤ íšŒì „)
#define SERVO_3 12  // ë²„íŠ¼ UP/DOWNìœ¼ë¡œ ì œì–´
#define SERVO_4 13  // ë²„íŠ¼ LEFT/RIGHTìœ¼ë¡œ ì œì–´
#define SERVO_5 9   // ë²„íŠ¼ E/Fë¡œ ì œì–´

Servo servo1, servo2, servo3, servo4, servo5;

// ì„œë³´ëª¨í„° ì´ˆê¸° ê°ë„
float angle1 = 90;  // ì„œë³´1 (ì¢Œìš°)
float angle2 = 90;  // ì„œë³´2 (ì•ë’¤)
int angle3 = 90;    // ì„œë³´3 (ë²„íŠ¼ ì œì–´)
int angle4 = 90;    // ì„œë³´4 (ë²„íŠ¼ ì œì–´)
int angle5 = 90;    // ì„œë³´5 (ë²„íŠ¼ ì œì–´)

// ì¡°ì´ìŠ¤í‹± ì…ë ¥ ë²”ìœ„ ë° ì†ë„
const int CENTER = 510;  // ì¡°ì´ìŠ¤í‹± ì¤‘ì•™ê°’
const int DEADZONE = 20; // ì›€ì§ì„ì´ ì—†ëŠ” ë²”ìœ„

const float MAX_SPEED_SLOW = 0.7; // ì„œë³´1,2 ì†ë„ ì¤„ì´ê¸° (ì´ˆë‹¹ ìµœëŒ€ 0.7ë„ ì´ë™)
const float MAX_SPEED_FAST = 2.0; // ì„œë³´3,4,5 ì†ë„ ë†’ì´ê¸° (ì´ˆë‹¹ ìµœëŒ€ 2.0ë„ ì´ë™)

const int SERVO_STEP_FAST = 3;  // ë²„íŠ¼ ì„œë³´ ì´ë™ ë‹¨ìœ„ ì¦ê°€ (ê¸°ì¡´ 1 â†’ 3)
const int DELAY_TIME_SLOW = 40; // ì„œë³´1,2 ì†ë„ ì¡°ì ˆ (ê¸°ì¡´ 20 â†’ 40)
const int DELAY_TIME_FAST = 10; // ì„œë³´3,4,5 ì†ë„ ì¦ê°€ (ê¸°ì¡´ 20 â†’ 10)

// ë§ˆì§€ë§‰ ì—…ë°ì´íŠ¸ ì‹œê°„
unsigned long prevTime = 0;

void setup() {
    Serial.begin(9600);

    // ë²„íŠ¼ì„ ì…ë ¥ ëª¨ë“œë¡œ ì„¤ì • (ë‚´ë¶€ í’€ì—… ì €í•­ ì‚¬ìš©)
    pinMode(BUTTON_UP, INPUT_PULLUP);
    pinMode(BUTTON_RIGHT, INPUT_PULLUP);
    pinMode(BUTTON_DOWN, INPUT_PULLUP);
    pinMode(BUTTON_LEFT, INPUT_PULLUP);
    pinMode(BUTTON_E, INPUT_PULLUP);
    pinMode(BUTTON_F, INPUT_PULLUP);

    // ì„œë³´ëª¨í„° ì´ˆê¸°í™”
    servo1.attach(SERVO_1);
    servo2.attach(SERVO_2);
    servo3.attach(SERVO_3);
    servo4.attach(SERVO_4);
    servo5.attach(SERVO_5);

    // ì´ˆê¸° ê°ë„ ì„¤ì •
    servo1.write(angle1);
    servo2.write(angle2);
    servo3.write(angle3);
    servo4.write(angle4);
    servo5.write(angle5);
}

void loop() {
    unsigned long currentTime = millis();
    float deltaTime = (currentTime - prevTime) / 1000.0;  // ì´ˆ ë‹¨ìœ„ ë³€í™˜

    if (deltaTime >= 0.05) {  // 50msë§ˆë‹¤ ì—…ë°ì´íŠ¸
        prevTime = currentTime;

        // ğŸ® ì¡°ì´ìŠ¤í‹± ì…ë ¥ ì½ê¸°
        int joyX = analogRead(Joy_X);
        int joyY = analogRead(Joy_Y);

        // ì„œë³´1 (Xì¶•) ì†ë„ ê³„ì‚° (ì†ë„ ë‚®ì¶¤)
        if (abs(joyX - CENTER) > DEADZONE) {
            float speedX = map(joyX, 0, 1023, -MAX_SPEED_SLOW * 100, MAX_SPEED_SLOW * 100) / 100.0;
            angle1 += speedX * deltaTime * 100;
        }

        // ì„œë³´2 (Yì¶•) ì†ë„ ê³„ì‚° (ì†ë„ ë‚®ì¶¤)
        if (abs(joyY - CENTER) > DEADZONE) {
            float speedY = map(joyY, 0, 1023, -MAX_SPEED_SLOW * 100, MAX_SPEED_SLOW * 100) / 100.0;
            angle2 += speedY * deltaTime * 100;
        }

        // ê°ë„ ì œí•œ (0~180ë„)
        angle1 = constrain(angle1, 0, 180);
        angle2 = constrain(angle2, 0, 180);

        // ğŸ® ë²„íŠ¼ ì…ë ¥ í™•ì¸ (ì„œë³´3, ì„œë³´4, ì„œë³´5 ì œì–´ - ì†ë„ ë†’ì„)
        bool upPressed = digitalRead(BUTTON_UP) == LOW;
        bool rightPressed = digitalRead(BUTTON_RIGHT) == LOW;
        bool downPressed = digitalRead(BUTTON_DOWN) == LOW;
        bool leftPressed = digitalRead(BUTTON_LEFT) == LOW;
        bool ePressed = digitalRead(BUTTON_E) == LOW;
        bool fPressed = digitalRead(BUTTON_F) == LOW;

        if (upPressed) angle3 = constrain(angle3 - SERVO_STEP_FAST, 0, 180); // ì„œë³´3 (-)
        if (downPressed) angle3 = constrain(angle3 + SERVO_STEP_FAST, 0, 180); // ì„œë³´3 (+)
        if (rightPressed) angle4 = constrain(angle4 + SERVO_STEP_FAST, 0, 180); // ì„œë³´4 (+)
        if (leftPressed) angle4 = constrain(angle4 - SERVO_STEP_FAST, 0, 180); // ì„œë³´4 (-)
        if (ePressed) angle5 = constrain(angle5 - SERVO_STEP_FAST, 0, 180); // ì„œë³´5 (-)
        if (fPressed) angle5 = constrain(angle5 + SERVO_STEP_FAST, 0, 180); // ì„œë³´5 (+)

        // ì„œë³´ëª¨í„° ì´ë™
        servo1.write(angle1);
        servo2.write(angle2);
        servo3.write(angle3);
        servo4.write(angle4);
        servo5.write(angle5);

        // ì‹œë¦¬ì–¼ ëª¨ë‹ˆí„° ì¶œë ¥
        Serial.print("Joystick X: ");
        Serial.print(joyX);
        Serial.print(" | Servo1 Angle: ");
        Serial.print(angle1);
        Serial.print(" || Joystick Y: ");
        Serial.print(joyY);
        Serial.print(" | Servo2 Angle: ");
        Serial.print(angle2);
        Serial.print(" || Servo3 Angle: ");
        Serial.print(angle3);
        Serial.print(" | Servo4 Angle: ");
        Serial.print(angle4);
        Serial.print(" | Servo5 Angle: ");
        Serial.println(angle5);
    }

    // ì„œë³´1,2ëŠ” ëŠë¦¬ê²Œ ì›€ì§ì´ê³ , ì„œë³´3,4,5ëŠ” ë¹ ë¥´ê²Œ ì›€ì§ì„
    delay(DELAY_TIME_SLOW);  // ì„œë³´1,2: 40ms ê°„ê²© (ê¸°ì¡´ë³´ë‹¤ ëŠë ¤ì§)
    delay(DELAY_TIME_FAST);  // ì„œë³´3,4,5: 10ms ê°„ê²© (ê¸°ì¡´ë³´ë‹¤ ë¹ ë¦„)
}
